<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orderfon">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ORDER"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="35sp"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zirka"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
    android:inputType="number"
        android:ems="6"
        android:hint="zirka"
        android:autoText="false"
        android:background="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="МІСТО"
        android:textColor="#ffffff"
        android:id="@+id/cityofo"
        android:layout_above="@+id/zirka"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Номер паспорта"
        android:textSize="25sp"
        android:id="@+id/numpofo"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:layout_above="@+id/cityofo"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Оформити замовлення"
        android:id="@+id/oform"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:layout_marginBottom="10sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:id="@+id/date"
        android:layout_below="@+id/zirka"
        android:hint="date"
        android:background="#ffffff"
        android:layout_marginTop="10sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/termin"
        android:layout_below="@+id/date"
        android:layout_centerHorizontal="true"
        android:hint="termin"
        android:layout_marginTop="10sp"
        android:background="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/kilk_osib"
        android:layout_below="@+id/termin"
        android:layout_centerHorizontal="true"
        android:hint="kilkist_osib"
        android:layout_marginTop="10sp"
        android:background="#ffffff" />

</RelativeLayout>